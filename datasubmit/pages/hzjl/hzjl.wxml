<form bindsubmit="formSubmit" bindreset="formReset">
<view class="page">

    <view class="page__hd">
        <view class="page__title">合作交流</view>
        <view class="weui-label">操作员:</view>
    </view>
    
    <view class="page__bd">
        <view class="weui-cells weui-cells_after-title">

     
      
            <view class="weui-cell weui-cell_input">
               <view class="weui-cell__hd">
                   <view class="weui-label">单位名称</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="unitname" placeholder="请输入名称"/>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">参与人数</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="peopelNum" placeholder="请输入人数"/>
                </view>
            </view>




            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">交流类型</view>
                </view>
                <view class="weui-cell__bd">
                <picker  name="category" bindchange="bindPickerChange" value="{{index}}" range="{{category}}">
                <view class="weui-input">{{category[index]}}</view>
                </picker>
                </view>
            </view>
                        <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">日期</view>
                </view>
                <view class="weui-cell__bd">
                <picker mode="date" name="chattime"  value="{{date}}"  start="2017-09-01" end="2027-09-01" bindchange="bindDateChange">
                    <view class="weui-input">
                    {{date}}
                    </view>
                </picker>
                </view>
            </view>


            </view>
                    <view class="weui-cells__title">参与人员</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea name="peopelList" class="weui-textarea" placeholder="请输入人员名单" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
            </view>
        </view>
            
        <view class="button-sp-area">
            <button type="primary" class="weui-btn" plain="true" formType="submit">提交</button>
            <button type="primary" class="weui-btn" plain="true"formType="reset">取消</button>
        </view>
    </view>
</view>

</form>



